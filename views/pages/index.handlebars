

<div class="card">
    {{#if user}}
    <a class="btn btn-success" href="/newComment" role="button">Yeni Yorum Ekle</a><br>
    <a class="btn btn-success" href="/newMovie" role="button">Yeni Film Ekle</a>
    {{/if}}
    <h5 class="card-header">Registered Users</h5>
    <div class="card-body">
        <ul class="list-group">
            {{#each users}}
                <li class="list-group-item">{{username}}</li>
            {{else}}
            <div class="alert alert-info">There is No Registered Users</div>
            {{/each}}
        </ul>      

    </div>
</div>
{{#if user}}
<h4 class="m-2">Aktif Kullanıcı : {{user.username}}</h4>
{{/if}}
